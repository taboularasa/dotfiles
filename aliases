# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e="$EDITOR"
alias v="$VISUAL"

# Bundler
alias b="bundle"

# Rubygems
alias gi="gem install"
alias giv="gem install -v"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias m="migrate"
alias rk="rake"
alias s="rspec"
alias z="zeus"

# Directories
alias dk="cd ~/work/sightglass-web"
alias dm="cd ~/work/wego-doorman"
alias wg="cd ~/work/wego"
alias mo="cd ~/work/mother"
alias cap="cd ~/work/capacitymatch"
alias csb="cd ~/work/curbstand-backend"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
